{
  "compilerOptions": {
    "outDir": "dist/",
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2016", "es2019", "es2017.object", "esnext.asynciterable"],
    "noImplicitAny": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "resolveJsonModule": true
  },
  "include": ["./src/"]
}